generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url       = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL")
}

enum RoleType {
  MEMBER
  ADMIN
  SUPER_ADMIN
}

enum StatusType {
  PENDING
  ACTIVE
  INACTIVE
}

model User {
  id        String    @id(map: "pk_user") @default(uuid()) @map("id") @db.Uuid
  createdAt DateTime  @default(now()) @map("created_at") @db.Timestamptz(3)
  updatedAt DateTime? @map("updated_at") @db.Timestamptz(3)
  createdBy String?   @map("created_by") @db.Uuid
  updatedBy String?   @map("updated_by") @db.Uuid

  firstName    String   @map("first_name") @db.Text
  lastName     String   @map("last_name") @db.Text
  username     String   @unique @map("username") @db.Text
  role         RoleType @default(MEMBER) @map("role")
  status       StatusType @default(PENDING) @map("status")
  password     String   @map("password") @db.Text
  refreshToken String[] @default([]) @map("refresh_tokens")

  @@map("user")
}

model Score {
  id        String    @id(map: "pk_score") @default(uuid()) @map("id") @db.Uuid
  createdAt DateTime  @default(now()) @map("created_at") @db.Timestamptz(3)
  updatedAt DateTime? @map("updated_at") @db.Timestamptz(3)
  createdBy String?   @map("created_by") @db.Uuid
  updatedBy String?   @map("updated_by") @db.Uuid

  scoreName String  @unique() @map("score_name") @db.Text
  fullName String? @map("full_name") @db.Text

  @@map("score")
}

model Room {
  id        String    @id(map: "pk_room") @default(uuid()) @map("id") @db.Uuid
  createdAt DateTime  @default(now()) @map("created_at") @db.Timestamptz(3)
  updatedAt DateTime? @map("updated_at") @db.Timestamptz(3)
  createdBy String?   @map("created_by") @db.Uuid
  updatedBy String?   @map("updated_by") @db.Uuid

  roomName  String   @unique() @map("room_name") @db.Text
  scores    Json     @map("scores") @db.Json

  @@map("room")
}


